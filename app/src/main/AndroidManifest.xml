<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.beaconinc.roarhousing">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".HousingApplication"
        android:allowBackup="true"
        android:icon="@drawable/roar_one"
        android:label="@string/app_name"
        android:roundIcon="@drawable/emma_white"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoarHousing"
        tools:ignore="AllowBackup">

        <activity android:name=".MainActivity"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:hardwareAccelerated="true"
                    tools:targetApi="honeycomb" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:label="RoaR lodges">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="www.roar.com"
                    android:scheme="https"
                    android:pathPrefix="/lodge"/>
            </intent-filter>

            <intent-filter android:label="RoaR Store">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:host="www.roar.com"
                    android:scheme="https"
                    android:pathPrefix="/property"/>
            </intent-filter>

            <nav-graph android:value="@navigation/main_nav"/>
        </activity>

        <service
            android:name=".fcm.MyFirebaseMessagingService"
            android:exported="false"
            >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/blue_300"/>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_emma" />

        <meta-data  android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/lodges_notification_channel_id"/>

        <meta-data android:name="com.google.firebase.messaging.products_notification_channel"
            android:value="@string/product_notification_channel_id"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

    </application>

</manifest>