<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RoarHousing" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_100</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item> <!--used for ad title color-->
        <item name="colorOnSecondary">@color/black_200</item> <!--become agent fade buttons-->

        <item name="colorSurface">@color/white</item>

        <item name="colorAccent">@color/blue_300</item>
        <item name="colorControlNormal">@color/blue_300</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/DialogStyle</item>

        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="font">@font/montserrat_medium</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogStyle" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/blue_500</item>
        <item name="android:colorControlNormal">@color/blue_500</item>
        <item name="android:colorAccent">@color/blue_500</item>
        <item name="android:colorPrimary">?attr/colorOnPrimary</item>
        <item name="android:colorPrimaryDark">@color/blue_500</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_500</item>
    </style>

</resources>