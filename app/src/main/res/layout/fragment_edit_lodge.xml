<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="lodgeDetail"
            type="com.beaconinc.roarhousing.cloudModel.FirebaseLodge"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/pagerBack"
                android:layout_width="@dimen/back_arrow_height"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="8dp"
                android:focusable="true"
                android:src="@drawable/ic_backward"
                app:layout_constraintBottom_toBottomOf="@+id/titleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/titleText"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@{lodgeDetail.lodgeName}"
                android:textAppearance="@style/Widget.Toolbar.title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pagerBack"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="God's Doing Lodge" />

            <TextView
                android:id="@+id/editLodge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="20dp"
                android:textColor="?attr/colorControlNormal"
                android:textAppearance="@style/Widget.Toolbar.title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_card_outline"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Place"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_locate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView18"
                app:tint="@color/blue_300"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{lodgeDetail.location}"
                android:textStyle="bold"
                android:textAppearance="@style/Widget.Roar.textHeadline"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                tools:text="Green house" />

            <View
                android:id="@+id/view4"
                android:layout_width="2dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view8"
                app:layout_constraintTop_toTopOf="@+id/view8" />

            <View
                android:id="@+id/view8"
                android:layout_width="2dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toStartOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView15"
                app:layout_constraintTop_toTopOf="@+id/textView18" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_border"
                app:layout_constraintEnd_toStartOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toEndOf="@+id/view8"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:tint="@color/blue_300"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{lodgeDetail.type}"
                android:textStyle="bold"
                android:textAppearance="@style/Widget.Roar.textHeadline"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                tools:text="Single room" />

            <ImageView
                android:id="@+id/imageView50"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/textView18"
                app:tint="@color/blue_300"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                app:layout_constraintStart_toEndOf="@+id/imageView50"
                app:layout_constraintTop_toTopOf="@+id/imageView50" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{lodgeDetail.size}"
                android:textStyle="bold"
                android:textAppearance="@style/Widget.Roar.textHeadline"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView81"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                tools:text="3.6m" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/yellow_200"
                app:cardElevation="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="Vacant\nRooms"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:text="@{lodgeDetail.availableRoom.toString()}"
                        android:textAppearance="?attr/textAppearanceHeadline4"
                        android:textColor="@color/blue_700"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView66"
                        tools:text="10" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/view5">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:id="@+id/rentTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="House Rent"
                                    android:layout_marginTop="10dp"
                                    android:textAppearance="@style/Widget.Roar.textHeadline"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="@+id/textP"
                                    app:layout_constraintStart_toStartOf="@+id/textP"
                                    app:layout_constraintTop_toBottomOf="@+id/title" />

                                <TextView
                                    android:id="@+id/textP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:text="@{@string/format_price(lodgeDetail.subPayment)}"
                                    android:textAppearance="@style/Widget.Roar.Toolbar"
                                    android:background="@drawable/blue_card_outline"
                                    android:padding="4dp"
                                    android:textSize="25sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/rentTitle"
                                    tools:text="₦500000" />

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="2dp"
                                    android:layout_height="0dp"
                                    android:layout_marginEnd="4dp"
                                    app:layout_constraintBottom_toBottomOf="@+id/textP"
                                    app:layout_constraintEnd_toStartOf="@+id/intPrice"
                                    app:layout_constraintTop_toTopOf="@+id/rentTitle"
                                    app:layout_constraintVertical_bias="1.0" />

                                <TextView
                                    android:id="@+id/intTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="Initial Fee"
                                    android:textSize="12sp"
                                    android:textAppearance="@style/Widget.Roar.textHeadline"
                                    app:layout_constraintEnd_toEndOf="@+id/intPrice"
                                    app:layout_constraintStart_toStartOf="@+id/intPrice"
                                    app:layout_constraintTop_toBottomOf="@+id/textP" />

                                <TextView
                                    android:id="@+id/intPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:text="@{@string/format_price(lodgeDetail.initialPayment)}"
                                    android:background="@drawable/blue_card_outline"
                                    android:padding="4dp"
                                    android:textAppearance="@style/Widget.Roar.Toolbar"
                                    android:textSize="25sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/intTitle"
                                    app:layout_constraintVertical_bias="0.7"
                                    tools:text="₦400000" />

                                <TextView
                                    android:id="@+id/in"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+ Lawyer fee"
                                    android:textSize="15sp"
                                    android:textAppearance="@style/Widget.Roar.textHeadline"
                                    app:layout_constraintEnd_toEndOf="@+id/intPrice"
                                    app:layout_constraintStart_toStartOf="@+id/intPrice"
                                    app:layout_constraintTop_toBottomOf="@+id/intPrice" />

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="Description"
                                    android:textAppearance="@style/Widget.Roar.textHeadline"
                                    android:textSize="19sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/desc"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/desc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/blue_card_outline"
                                    android:lineSpacingExtra="4dp"
                                    android:lineSpacingMultiplier="1"
                                    android:padding="4dp"
                                    android:text="@{lodgeDetail.description}"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Widget.Roar.textHeadline"
                                    android:textSize="15sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/view"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/rentTitle"
                                    app:layout_constraintVertical_bias="0.2"
                                    tools:text="This apartment has 1 bedroom, a kitchen with a dishwasher and a microwave, a flat-screen Tv, a seating area and 1 bathroom fitted with a shower." />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:id="@+id/view2"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="5dp"
                                android:background="?attr/colorOnSecondary"
                                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                                app:layout_constraintEnd_toStartOf="@+id/textView6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView6" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Lodge Condition"
                                android:textAppearance="@style/Widget.Roar.textHeadline"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/view0"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:background="?attr/colorOnSecondary"
                                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView6"
                                app:layout_constraintTop_toTopOf="@+id/textView6" />

                            <TableLayout
                                android:id="@+id/tableLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/blue_card_outline"
                                android:padding="5dp"
                                android:stretchColumns="1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView6">

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:text="Water" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.water}"
                                        android:textAppearance="@style/Widget.Roar.textHeadline"
                                        android:layout_gravity="center"
                                        tools:text="Always" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:text="Light" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.light}"
                                        android:layout_gravity="center"
                                        android:textAppearance="@style/Widget.Roar.textHeadline"
                                        tools:text="Often" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:text="Network" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.network}"
                                        android:textAppearance="@style/Widget.Roar.textHeadline"
                                        android:layout_gravity="center"
                                        tools:text="Fair" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:paddingBottom="3dip"
                                        android:layout_gravity="center"
                                        android:text="Nature of Surrounding" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.surrounding}"
                                        android:textAppearance="@style/Widget.Roar.textHeadline"
                                        tools:text="Good"
                                        android:layout_gravity="center" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:layout_gravity="center"
                                        android:text="Nearness to School" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.distance}"
                                        android:textAppearance="@style/Widget.Roar.textHeadline"
                                        tools:text="Close"
                                        android:layout_gravity="center" />
                                </TableRow>
                            </TableLayout>

                            <View
                                android:id="@+id/view5"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="50dp"
                                android:background="@color/black_500"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/materialCardView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="10dp"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view5" />

                            <TextView
                                android:id="@+id/textView67"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="10dp"
                                android:text="Tour Video"
                                android:textAppearance="@style/Widget.Toolbar.title"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view5" />

                            <TextView
                                android:id="@+id/uploadVideo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="upload"
                                android:layout_marginEnd="20dp"
                                android:textStyle="bold"
                                android:textAppearance="@style/Widget.Roar.Button.TextButton"
                                android:textColor="?attr/colorControlNormal"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView67"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <ImageView
                                android:id="@+id/playerView"
                                android:layout_width="0dp"
                                android:layout_height="200dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/ic_video_player"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="60dp"
                                app:layout_constraintTop_toBottomOf="@+id/textView67"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/playBtn"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_play_btn2"
                                app:layout_constraintBottom_toBottomOf="@+id/playerView"
                                app:layout_constraintEnd_toEndOf="@+id/playerView"
                                app:layout_constraintStart_toStartOf="@+id/playerView"
                                app:layout_constraintTop_toTopOf="@+id/playerView"
                                tools:ignore="ContentDescription" />

                            <ProgressBar
                                android:id="@+id/imageUploading"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:layout_constraintVertical_bias="0.2"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view5" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </com.google.android.material.card.MaterialCardView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="200dp"
                android:elevation="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>


