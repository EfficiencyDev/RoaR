<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="lodgeDetail"
            type="com.beaconinc.roarhousing.cloudModel.FirebaseLodge"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/pagerBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_backward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@{lodgeDetail.lodgeName}"
                android:textAppearance="@style/Widget.Toolbar.title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pagerBack"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="God's Doing Lodge" />

            <TextView
                android:id="@+id/editLodge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="20dp"
                android:textColor="@color/blue_700"
                android:textAppearance="@style/Widget.Toolbar.title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_card_outline"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Place"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_locate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView18"
                app:tint="@color/yellow_200"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{lodgeDetail.location}"
                android:textStyle="bold"
                android:textAppearance="@style/Widget.Roar.textHeadline"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                tools:text="Green house" />

            <View
                android:id="@+id/view4"
                android:layout_width="2dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view8"
                app:layout_constraintTop_toTopOf="@+id/view8" />

            <View
                android:id="@+id/view8"
                android:layout_width="2dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toStartOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView15"
                app:layout_constraintTop_toTopOf="@+id/textView18" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_border"
                app:layout_constraintEnd_toStartOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toEndOf="@+id/view8"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:tint="@color/yellow_200"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{lodgeDetail.type}"
                android:textStyle="bold"
                android:textAppearance="@style/Widget.Roar.textHeadline"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                tools:text="Single room" />

            <ImageView
                android:id="@+id/imageView50"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.27"
                app:layout_constraintStart_toEndOf="@+id/view4"
                app:layout_constraintTop_toTopOf="@+id/textView18"
                app:tint="@color/yellow_200"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                app:layout_constraintStart_toEndOf="@+id/imageView50"
                app:layout_constraintTop_toTopOf="@+id/imageView50" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{lodgeDetail.size}"
                android:textStyle="bold"
                android:textAppearance="@style/Widget.Roar.textHeadline"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView81"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                tools:text="3.6m" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/blue_700"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.available">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Available Rooms:" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/yellow_200"
                        android:layout_marginStart="5dp"
                        android:text="@{lodgeDetail.availableRoom.toString()}"
                        android:paddingEnd="5dp"
                        android:textStyle="bold"
                        tools:text="10" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.selectedCorner">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/view5">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:id="@+id/rentTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="House Rent"
                                    android:textColor="@color/black_500"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="@+id/textP"
                                    app:layout_constraintStart_toStartOf="@+id/textP"
                                    app:layout_constraintTop_toTopOf="@+id/title" />

                                <TextView
                                    android:id="@+id/textP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:text="@{@string/format_price(lodgeDetail.subPayment)}"
                                    android:textColor="@color/black_700"
                                    android:background="@drawable/blue_card_outline"
                                    android:padding="4dp"
                                    android:textSize="25sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/rentTitle"
                                    tools:text="₦500000" />

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="2dp"
                                    android:layout_height="0dp"
                                    android:layout_marginEnd="4dp"
                                    android:background="@color/white"
                                    app:layout_constraintBottom_toBottomOf="@+id/textP"
                                    app:layout_constraintEnd_toStartOf="@+id/intPrice"
                                    app:layout_constraintTop_toTopOf="@+id/rentTitle"
                                    app:layout_constraintVertical_bias="1.0" />

                                <TextView
                                    android:id="@+id/intTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="Initial Fee"
                                    android:textColor="@color/black_500"
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="@+id/intPrice"
                                    app:layout_constraintStart_toStartOf="@+id/intPrice"
                                    app:layout_constraintTop_toBottomOf="@+id/textP" />

                                <TextView
                                    android:id="@+id/intPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:text="@{@string/format_price(lodgeDetail.initialPayment)}"
                                    android:textColor="@color/black_700"
                                    android:background="@drawable/blue_card_outline"
                                    android:padding="4dp"
                                    android:textSize="25sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/intTitle"
                                    app:layout_constraintVertical_bias="0.7"
                                    tools:text="₦400000" />

                                <TextView
                                    android:id="@+id/in"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+ Lawyer fee"
                                    android:textColor="@color/black_700"
                                    android:textSize="15sp"
                                    app:layout_constraintEnd_toEndOf="@+id/intPrice"
                                    app:layout_constraintStart_toStartOf="@+id/intPrice"
                                    app:layout_constraintTop_toBottomOf="@+id/intPrice" />

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dp"
                                    android:text="Description"
                                    app:layout_constraintHorizontal_bias="0.3"
                                    android:textColor="@color/black_700"
                                    android:textSize="19sp"
                                    app:layout_constraintEnd_toStartOf="@+id/view"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/desc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:padding="4dp"
                                    android:lineSpacingExtra="4dp"
                                    android:lineSpacingMultiplier="1"
                                    android:text="@{lodgeDetail.description}"
                                    android:textAlignment="center"
                                    android:background="@drawable/blue_card_outline"
                                    android:textColor="@color/black_700"
                                    android:textSize="15sp"
                                    app:layout_constraintVertical_bias="0.2"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/view"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/title"
                                    tools:text="This apartment has 1 bedroom, a kitchen with a dishwasher and a microwave, a flat-screen Tv, a seating area and 1 bathroom fitted with a shower." />
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:id="@+id/view2"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/black_500"
                                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                                app:layout_constraintEnd_toStartOf="@+id/textView6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView6" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Lodge Condition"
                                android:textColor="@color/black_700"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/view0"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:background="@color/black_500"
                                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView6"
                                app:layout_constraintTop_toTopOf="@+id/textView6" />

                            <TableLayout
                                android:id="@+id/tableLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="55dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="55dp"
                                android:background="@drawable/blue_card_outline"
                                android:padding="5dp"
                                android:stretchColumns="1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView6">

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:text="Water" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.water}"
                                        android:textColor="@color/black_700"
                                        android:layout_gravity="center"
                                        tools:text="Always" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:text="Light" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.light}"
                                        android:layout_gravity="center"
                                        android:textColor="@color/black_700"
                                        tools:text="Often" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:text="Network" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.network}"
                                        android:textColor="@color/black_700"
                                        android:layout_gravity="center"
                                        tools:text="Fair" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:paddingBottom="3dip"
                                        android:layout_gravity="center"
                                        android:text="Nature of Surrounding" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.surrounding}"
                                        android:textColor="@color/black_700"
                                        tools:text="Good"
                                        android:layout_gravity="center" />
                                </TableRow>

                                <TableRow>

                                    <TextView
                                        android:padding="3dip"
                                        android:layout_gravity="center"
                                        android:text="Nearness to School" />

                                    <TextView
                                        android:padding="3dip"
                                        android:text="@{lodgeDetail.distance}"
                                        android:textColor="@color/black_700"
                                        tools:text="Close"
                                        android:layout_gravity="center" />
                                </TableRow>
                            </TableLayout>

                            <View
                                android:id="@+id/view5"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_marginStart="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="50dp"
                                android:background="@color/black_500"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/materialCardView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="50dp"
                                app:cardCornerRadius="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/view5" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </com.google.android.material.card.MaterialCardView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="200dp"
                android:elevation="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>


