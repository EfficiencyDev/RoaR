<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageLink"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:scaleType="fitXY"
        app:strokeColor="?attr/colorOnSecondary"
        app:strokeWidth="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.cornerRadius"
        tools:ignore="ContentDescription"
        tools:src="@drawable/loading_background" />

    <TextView
        android:id="@+id/suspendView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:text="Suspended"
        android:visibility="gone"
        android:layout_marginTop="6dp"
        android:textColor="@color/red_700"
        app:layout_constraintStart_toStartOf="@+id/imageLink"
        app:layout_constraintTop_toTopOf="@+id/imageLink" />

    <TextView
        android:id="@+id/imageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_700"
        android:padding="4dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:alpha="0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageLink"
        app:layout_constraintEnd_toEndOf="@+id/imageLink"
        app:layout_constraintStart_toStartOf="@+id/imageLink"
        app:layout_constraintTop_toBottomOf="@+id/imageLink"
        tools:text="Rotary Plus" />

    <View
        android:id="@+id/view17"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="?attr/colorOnSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>