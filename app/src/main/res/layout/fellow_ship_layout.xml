<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fellowShipRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:scrollbarStyle="insideOverlay"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/fellowship_list_items" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/white_circle_background"
        android:elevation="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_transparent_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/fellowShipRecycler"
        app:layout_constraintEnd_toEndOf="@+id/fellowShipRecycler"
        app:layout_constraintTop_toTopOf="@+id/fellowShipRecycler"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>